<div class="card border-primary m-3">
  <div class="card-body">
    <% if @employee_profile.errors.present? %>
      <%= render "shared/errors", errors: @employee_profile.errors %>
    <% end %>
    <h4 class="card-title">Atualização de cadastro:</h4>
    <%= form_with model: [@company, @department, @employee_profile], data: { turbo: false }, url: create_manager_company_department_employee_profiles_path do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :social_name, class: 'form-label' %>
        <%= f.text_field :social_name, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.text_field :email, class: 'form-control', value: current_user.email, readonly: true %>
      </div>
      <div class="mb-3">
        <%= f.label :birth_date, class: 'form-label' %>
        <%= f.date_field :birth_date, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :cpf, class: 'form-label' %>
        <%= f.text_field :cpf, class: 'form-control', value: current_user.cpf, readonly: true %>
      </div>
      <div class="mb-3">
        <%= f.label :phone_number, class: 'form-label' %>
        <%= f.text_field :phone_number, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :admission_date, class: 'form-label' %>
        <%= f.date_field :admission_date, class: 'form-control', value: @manager.created_at.to_date, readonly: true %>
      </div>
      <%= f.submit t('.save'), class: 'mt-3 btn btn-success' %>
    <% end %>
  </div>
</div>