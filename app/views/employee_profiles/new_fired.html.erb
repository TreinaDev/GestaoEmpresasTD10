<div class="card shadow-sm p-3 mb-5 bg-body rounded m-3 ">
  <div class="card-body">
    <% if @employee_profile.errors.present? %>
      <%= render "shared/errors", errors: @employee_profile.errors %>
    <% end %>
    <h4 class="card-title">Desligamento do Funcion√°rio</h4>
    <p>Nome: <%= @employee_profile.name %></p>
    <p>Email: <%= @employee_profile.email %></p>
    <p>CPF: <%= @employee_profile.cpf %></p>
    <hr>
    <%= form_with url: fired_company_department_employee_profiles_path(@company, @department, id: @employee_profile), data: { turbo: false }  do |f| %>
      <div class="mb-3 col-lg-3 col-md-4 col-12">
        <label for="fired_date"><%= t('.dismissal_date') %></label>

        <input type="date" id="fired_date" name="fired[date]" class="form-control mt-2">
      </div>
      <%= f.submit t('.fired'), class: 'mt-3 btn btn-danger' %>
    <% end %>
  </div>
</div>
