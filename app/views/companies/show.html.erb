<div class="card border-primary">
  <% if @company.logo.present? %>
    <%= image_tag @company.logo, class: 'card-img-top rounded' %>
  <% end %>
  <div class="card-body">
    <h2 class="card-title"><%= @company.brand_name %></h2>
    <p class="card-text"><%= @company.corporate_name %></p>
    <p class="card-text"><%= @company.registration_number %></p>
    <p class="card-text"><%= @company.address %></p>
    <p class="card-text"><%= @company.phone_number %></p>
    <p class="card-text"><%= @company.email %></p>
    <p class="card-text"><%= @company.domain %></p>
  </div>
</div>
