<div class="card border-primary">
  <div class="card-body">
    <% if @department.errors.present? %>
      <%= render "shared/errors", errors: @department.errors %>
    <% end %>
    <h4 class="card-title">Nova Departamento</h4>
    <%= form_with model: @department, data: { turbo: false }  do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :description, class: 'form-label' %>
        <%= f.text_area :description, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :code, class: 'form-label' %>
        <%= f.text_field :code, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :company, class: 'form-label' %>
        <%= f.collection_select  :company, @companies, :id, :brand_name, class: 'form-control'%>
      </div>
      <%= f.submit 'Criar Departamento'%>
    <% end %>
  </div>
</div>