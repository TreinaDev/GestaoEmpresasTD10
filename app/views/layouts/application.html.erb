<!DOCTYPE html>
<html>
  <head>
    <title>Gerenciador de Empresas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container">
          <div class="container-fluid d-flex">
            <%= link_to "Cadastro de empresas", root_path, class: 'navbar-brand' %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav d-flex w-100">
                <li class="nav-item">
                  <%= link_to 'Empresas', companies_path, class:'nav-link' if current_user.admin? %>
                </li>
                <li>
                  <%= link_to 'Empresas Inativas', inactives_companies_path, class:'nav-link' if current_user.admin? %>
                </li>
                <li class="nav-item" >
                    
                </li>
                <li class="nav-item ms-auto">
                  <div class='nav-user'>
                    <%= current_user.description%>
                    <%= button_to "Sair", destroy_user_session_path, method: :delete, class:'btn nav-link ms-auto' %>
                  </div>
                  
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    <%end%>

    <div class="container">
      <div class="mt-3">
        <div class="alert alert-success alert-dismissible fade show <%= notice.nil? ? 'd-none' : '' %>" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="alert alert-warning alert-dismissible fade show  <%= alert.nil? ? 'd-none' : '' %>" role="alert" >
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>

  <div class="container">
    <%= yield %>
  </div>
    
  </body>
</html>
