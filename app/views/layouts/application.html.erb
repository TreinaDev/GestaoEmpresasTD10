<!DOCTYPE html>
<html>
  <head>
    <title>Gerenciador de Empresas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Logo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <%= link_to 'Cadastrar FuncionÃ¡rio', new_employee_profile_path if current_user.manager? %>
              <%= link_to 'Empresas', companies_path if current_user.admin? %>
              <%= link_to 'Empresas Inativas', inactives_companies_path if current_user.admin? %>
              <li class="nav-item" >
                  <%= current_user.description%>
                  <%= button_to "Sair", destroy_user_session_path, method: :delete, class:'btn nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Cadastrar-se', new_user_registration_path, class:'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Entrar', new_user_session_path, class:'nav-link' %>
              </li>
            <%end%>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="mt-3">
        <div class="alert alert-success alert-dismissible fade show <%= notice.nil? ? 'd-none' : '' %>" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="alert alert-warning alert-dismissible fade show  <%= alert.nil? ? 'd-none' : '' %>" role="alert" >
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
    <%= yield %>

  </body>
</html>
