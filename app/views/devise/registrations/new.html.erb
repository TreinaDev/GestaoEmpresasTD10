
<h2>Inscrever-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres m√≠nimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "nova-senha" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nova-senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar conta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
