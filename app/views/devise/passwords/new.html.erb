<div class="d-flex vh-100 align-items-center justify-content-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
  html: { class: 'shadow p-3 mb-5 bg-body rounded login-card' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="login-card-head">
      <h2>Gestão de empresas</h2>
      <h4 class="text-secondary">Recuperar senha</h4>
    </div>
    <div class="mb-3">
      <%= f.label :email, class:'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "e-mail", class:'form-control' %>
    </div>
    <div class="d-flex">
      <%= f.submit "Enviar email de recuperação", class:'btn btn-primary ms-auto' %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
